<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginBottom="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="240dip"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:layout_weight="1"
        >

        <TextView android:text="@string/input_it_here"
            android:layout_height="wrap_content"
            android:layout_width="240dip"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:background="#D4D4D4"
            />
        <EditText
            android:id="@+id/edit_text_to_be_converted"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
</LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="240dip"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:layout_weight="99"

        >

        <TextView android:text="@string/to_be_converted"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:background="#D4D4D4"
            />
        <Spinner
            android:id="@+id/input_spinner"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#F0F0F0"
            />
        <TextView android:text="@string/text_View_second"
            android:layout_height="wrap_content"
            android:layout_width="240dp"
            android:textSize="16dp"
            android:gravity="center"
            android:background="#D4D4D4"
            />

        <Spinner
            android:id="@+id/output_spinner"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            />
        <TextView
            android:id="@+id/resultView"
            android:layout_width="240dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <Button
        android:id="@+id/buttonStart"
        android:layout_centerHorizontal="true"
        android:layout_width="240dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="@string/button_start"
        android:layout_weight="1"
        />



</LinearLayout>
